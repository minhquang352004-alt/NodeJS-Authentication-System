<section>
  <h2>Sign In</h2>
  <% if (message) { %>
    <p class="text-danger"><%= message %></p>
  <% } %>

  <form action="/user/signin" method="post">
    <input type="email" name="email" placeholder="Email" required /><br /><br />
    <input
      type="password"
      name="password"
      placeholder="Password"
      required
    /><br /><br />

    <!-- reCAPTCHA test key -->
    <div class="g-recaptcha" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>
    <br />

    <button type="submit" class="btn btn-light w-100">Sign In</button>
  </form>

  <br />

  <!-- Sign-in Google Auth -->
  <a href="/auth/google"><strong>Sign In with Google</strong></a> &nbsp;&nbsp;

  <!-- Link to forgot password page -->
  <a href="/user/forgot-password"><strong>Forgot Password?</strong></a><br>

  <p>
    <strong>Don't have an account?</strong> &nbsp;
    <a href="/user/signup"><strong>Sign up</strong></a>
  </p>
</section>
