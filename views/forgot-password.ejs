<section>
  <h2>Forget Password</h2>
  <% if (message) { %>
    <p class="text-danger"><%= message %></p>
  <% } %>

  <form action="/user/forgot-password" method="post">
    <input type="email" name="email" placeholder="Email" required class="form-control mb-3" />

    <!-- reCAPTCHA test key -->
    <div class="g-recaptcha" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>
    <br />

    <button type="submit" class="btn btn-light w-100"><strong>Forget Password</strong></button>
  </form>

  <br />

  <p>
    <strong>Don't have an account?</strong>
    <a href="/user/signup"><strong>Sign up</strong></a>
  </p>
  <p>
    <strong>Already have an account?</strong>
    <a href="/user/signin"><strong>Sign in</strong></a>
  </p>
</section>
