<section>
  <p>
    <strong>Go Back to</strong>&nbsp;&nbsp;
    <a href="/user/homepage"><strong>Home</strong></a>
  </p>

  <h2>Change Password</h2>
  <% if (message) { %>
    <p class="text-danger"><%= message %></p>
  <% } %>

  <form action="/user/change-password" method="post">
    <input type="password" name="oldPassword" placeholder="Old Password" required class="form-control mb-3" />
    <input type="password" name="newPassword" placeholder="New Password" required class="form-control mb-3" />

    <!-- reCAPTCHA test key -->
    <div class="g-recaptcha mb-3" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>

    <button type="submit" class="btn btn-light w-100 mb-2"><strong>Change Password</strong></button>
    <a href="/user/signout" class="btn btn-danger w-100"><strong>Log Out</strong></a>
  </form>

  <br />

  <p>
    <strong>Don't have an account?</strong>
    <a href="/user/signup"><strong>Sign up</strong></a>
  </p>
  <p>
    <strong>Already have an account?</strong>
    <a href="/user/signin"><strong>Sign in</strong></a>
  </p>
</section>
